<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/add_photo_tv"
        style="@style/ActionItem"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_outline_add_a_photo_24"
        android:drawableLeft="@drawable/ic_outline_add_a_photo_24"
        android:text="@string/action_get_image_from_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_image_tv"
        style="@style/ActionItem"
        android:drawableStart="@drawable/ic_outline_image_24"
        android:drawableLeft="@drawable/ic_outline_image_24"
        android:text="@string/action_upload_from_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_photo_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>